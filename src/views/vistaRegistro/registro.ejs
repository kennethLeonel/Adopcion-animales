<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Registrarse</title>
</head>
    <body>

        <%- include('../partials/navegacion') %> 
        <main action="/admin/usuario" method="POST" class="registro-main" enctype="multipart/form-data" >
            <div class="center">
                <h1>Registrarse</h1>
                <form method="post">
    
                    <div class="txt_field">
                        <input type="text" name="nombre"  id="nombre" >
                        <span></span>
                        <label>Nombre y apellido</label>
                    </div>
                    <% if(locals.errors && locals.errors.nombre){ %>
                        <p class="msg-error"> <%= errors.nombre.msg %>  </p>
                      <% } %> 
                    <div class="txt_field">
                        <input type="email" name="email"  id="email" >
                        <span></span>
                        <label>Correo</label>
                    </div>
                    <% if(locals.errors && locals.errors.email){ %>
                        <p> <%= errors.email.msg %>  </p>
                      <% } %> 
                    <div class="txt_field">
                        <input type="password" name="password"  id="password" >
                        <span></span>
                        <label>Contrase√±a</label>
                    </div>
                    <% if(locals.errors && locals.errors.password){ %>
                        <p> <%= errors.password.msg %>  </p>
                      <% } %> 
                    <div class="txt_field">
                      <input type="file" name="img"  id="img"  >
                      <span></span>
                      <label for="imagen">Agregar imagen</label>
                  </div>
                  <% if(locals.errors && locals.errors.img){ %>
                    <p> <%= errors.img.msg %>  </p>
                  <% } %> 
                    <input type="submit" value="Registro">
                    <div class="signup_link">
                        Ya eres miembro? <a href="/login">Inicia sesion!</a>
                    </div>
    
                    
    
                
    
            </form>
        </main>
        <%- include('../partials/footer') %>
</body>
</html>